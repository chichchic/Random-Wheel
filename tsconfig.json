{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "lib": ["ES2015", "DOM"],
    "module": "ES6",
    "outDir": "./src/out",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots": ["src/types"],
    "baseUrl": ".",
    "removeComments": true,
    "paths": {
      "src/*": ["src/*"],
      "style/*": ["src/style/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
